@model SliderDetailVM
@{
    ViewData["Title"] = "Detail";
}



<div class="container-fluid my-5">
   
       <div class="row">
           <div class="col-6">
            <img src="~/images/@Model.Image" style="width:100%; height=100%;" />
           </div>
         <div class="col-6 ">
            <img src="~/images/@Model.Logo"  class="d-block m-auto"/>
            <h1 class="text-center">@Model.Title</h1>
            <h2 class="text-center my-2">@Model.Description</h2>
            <h3 class="text-center">CreateDate: @Model.CreateDate</h3>
            <h4 class="text-center mt-3">Status: @Model.Status</h4>
         </div>
       </div>
   
</div>
<a asp-action="Index" class="btn btn-outline-info d-block m-auto my-5">Back</a>

