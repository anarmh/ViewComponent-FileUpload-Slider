@model NewsDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid my-5">

       <div class="row">
           <div class="col-6">
            <img src="~/images/@Model.NewsImages.FirstOrDefault().Image" style="width:500px; height=300px;" />
           </div>
         <div class="col-6 ">
            <h1 class="text-center my-5">Author: @Model.NewsAuthor.FullName</h1>
            <h1 class="text-center">Title: @Model.PostTitle</h1>
           
         </div>
       </div>

</div>
<a asp-action="Index" class="btn btn-outline-info d-block m-auto my-5">Back</a>